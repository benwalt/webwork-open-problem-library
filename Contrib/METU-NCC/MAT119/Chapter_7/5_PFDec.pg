DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

COMMENT('not original problem');

$showPartialCorrectAnswers = 0;

my $b = random(2,17,1);
my $n = random(4,8,2);

my $d = random(1,3);
my $dd=$d**2; $c = $dd; 
my $a = ($c==1) ? 7 : $c - 1;

my @u = ("(x-$c)","(x^2-$dd)^2","(x^2+$c)^2")[shuffle(3)];

# Make a new multiple choice object.
$mc = new_multiple_choice();
# $mc now "contains" the multiple choice object.

# Insert some  questions and matching answers in the q/a list
$mc -> qa (# 
# Notice that the first string is the question
"What is the correct form of the partial fraction decomposition for the following integral? \[ \int \frac{$b (x^{$n} + $a)}{$u[0]\,$u[1]\,$u[2]} \; dx\] ",
# The second string is the  correct answer
"\(\displaystyle \int \left( \frac{A}{x - $c} + \frac{B}{x+$d} + \frac{C}{(x+$d)^2} + \frac{D}{x-$d} + \frac{E}{(x-$d)^2} + \frac{Fx+G}{x^2 + $c} + \frac{Hx+I}{(x^2 + $c)^2} \right)\, dx \)",                   
);
$mc ->extra(       
"\(\displaystyle \int \left( \frac{A}{x - $c} + \frac{Bx+C}{x^2-$dd} + \frac{Cx+D}{(x^2-$dd)^2} + \frac{Ex+F}{x^2 + $c} + \frac{Gx+H}{(x^2 + $c)^2} \right)\, dx \)",             
"\(\displaystyle \int \left( \frac{A}{x - $c} + \frac{Bx+C}{(x^2-$dd)^2} + \frac{Dx+E}{(x^2 + $c)^2} \right)\, dx \)",       
"\(\displaystyle \int \left( \frac{A}{x - $c} + \frac{B}{(x^2-$dd)^2} + \frac{C}{(x^2 + $c)^2} \right)\, dx \)",
"\(\displaystyle \int \left( \frac{A}{x - $c} + \frac{B}{x+$d} + \frac{C}{(x+$d)^2} + \frac{D}{x-$d} + \frac{E}{(x-$d)^2} + \frac{Fx+G}{x^2 + $c} \right)\, dx \)",
"There is no partial fraction decomposition yet because long division must be done first.",
"There is no partial fraction decomposition because the denominator does not factor.",
"There is no partial fraction decomposition yet because there is cancellation."      
);

# Print the question using $mc->print_q
# Use $mc->print_a to print the list of possible answers.
# These need to be done inside BEGIN_TEXT/END_TEXT to make sure that the 
# equations inside the questions and answers are processed properly.

BEGIN_TEXT

\{$mc -> print_q \}
$PAR
\{$mc -> print_a\}
END_TEXT
# Enter the correct answers to be checked against the answers to the students.
ANS(str_cmp( $mc->correct_ans )   ) ;

ENDDOCUMENT(); 
